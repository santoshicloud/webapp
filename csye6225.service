[Unit]
Description=CSYE 6225 app.js
ConditionPathExists=/opt/webapplaptop/app.js
After=network.target

[Service]
Type=simple
User=csye6225
Group=csye6225
WorkingDirectory=/opt/webapplaptop
EnvironmentFile=/opt/webapplaptop/.env
ExecStart=/usr/bin/node /opt/webapplaptop/app.js
Restart=always
RestartSec=3
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=csye6225

[Install]
WantedBy=multi-user.targets